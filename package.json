{
  "name": "simorgh",
  "version": "1.0.0",
  "description": "Simorgh",
  "main": "./src/client.js",
  "scripts": {
    "amp:validate": "wait-on http://localhost.bbc.com:7080/news/articles/c6v11qzyv8po.amp && amphtml-validator http://localhost.bbc.com:7080/news/articles/c6v11qzyv8po.amp && amphtml-validator http://localhost.bbc.com:7080/igbo.amp",
    "audit:ci": "audit-ci --low",
    "bbcA11y": "wait-on -t 20000 http://localhost.bbc.com:7080/news/articles/c6v11qzyv8po && bbc-a11y",
    "build:ci": "export NODE_ENV=production && rm -rf build && npm run build:test && npm run build:live",
    "build": "rm -rf build && cp envConfig/local.env .env && npm run webpack:prod && npm run test:size",
    "build:storybook": "build-storybook -c .storybook -o storybook_dist",
    "build:test": "cp envConfig/test.env .env && npm run webpack:prod",
    "build:live": "cp envConfig/live.env .env && npm run webpack:prod",
    "cypress:proxy": "export NO_PROXY=localhost,localhost.bbc.com && cypress",
    "cypress": "npm run cypress:proxy -- run",
    "cypress:interactive": "npm run cypress:proxy -- open",
    "cypress:3rdParty": "npm run cypress -- --project ./3rdPartyCypress/.",
    "cypress:3rdParty:interactive": "npm run cypress:interactive -- --project ./3rdPartyCypress/.",
    "cypress:storybook": "wait-on -t 120000 http://localhost.bbc.com:9001 && npm run cypress -- --project ./.storybook/.",
    "cypress:storybook:interactive": "npm run cypress:interactive -- --project ./.storybook/.",
    "dataValidate": "node dataValidator/index.js",
    "dataValidate:debug": "npm run dataValidate --DEBUG_MODE=true",
    "dev": "rm -rf build && cp envConfig/local.env .env && run-p webpack:dev:client webpack:dev:server",
    "force-package-lock-https": "find . -type f -name \"package-lock.json\" | grep -v node_modules | xargs -I % sh -c 'echo \"Replacing http->https in %\"; sed -i \"\" -e \"s/http:\\/\\//https:\\/\\//g\" %'",
    "killApp": "(lsof -t -i:7080 | xargs kill)",
    "killStorybook": "(lsof -t -i:9001 | xargs kill)",
    "postshrinkwrap": "if test -z $CI; then \n npm run force-package-lock-https \n fi; \n git update-index --assume-unchanged .env",
    "speculate": "speculate",
    "start": "NODE_ENV=production node build/server.js",
    "storybook": "start-storybook -p 9001 -c .storybook -h localhost.bbc.com",
    "storybook:ci": "start-storybook -p 9001 -c .storybook --ci",
    "test": "npm run test:lint && npm run dataValidate && npm run test:dependencies && npm run test:unit && npm run test:ampValidate:ci",
    "test:accessibility": "npm run killApp && npm run build && run-p --race start bbcA11y",
    "test:ampValidate": "npm run killApp && npm run build -- --hide-modules --colors && run-p --race start amp:validate",
    "test:ampValidate:ci": "npm run build -- --hide-modules --colors && run-p --race start amp:validate",
    "test:chromatic": "chromatic test run  --build-script-name build:storybook || true",
    "test:dependencies": "npx dependency-check@3.4.1 ./package.json",
    "test:prod:ci": "npm run start & npm install --no-save cypress@latest bbc-a11y@latest lighthouse@latest npm-run-all@latest puppeteer@latest && run-p cypress bbcA11y lighthouse test:puppeteer",
    "test:prod:travis": "CYPRESS_SKIP_EU=true npm run test:prod:ci",
    "test:e2e": "npm run killApp && npm run build && run-p --race start cypress",
    "test:e2e:local_env": "CYPRESS_APP_ENV=local npm run test:e2e",
    "test:e2e:test_env": "CYPRESS_APP_ENV=test npm run cypress",
    "test:e2e:live_env": "CYPRESS_APP_ENV=live npm run cypress",
    "test:e2e:interactive": "npm run killApp && npm run build && run-p --race start cypress:interactive",
    "test:e2e:storybook": "npm run killStorybook && run-p --race storybook cypress:storybook",
    "test:e2e:storybook:ci": "run-p --race storybook:ci cypress:storybook",
    "test:e2e:storybook:interactive": "npm run killStorybook && run-p --race storybook cypress:storybook:interactive",
    "lighthouse": "npm run lighthouse:article && npm run lighthouse:frontpage",
    "lighthouse:article": "lighthouse http://localhost.bbc.com:7080/news/articles/c6v11qzyv8po --chrome-flags=\"--no-sandbox --headless --disable-gpu\" --output json --output html --output-path simorgh --config-path scripts/lighthouseConfig.js && node scripts/lighthouseBudget.js run",
    "lighthouse:frontpage": "lighthouse http://localhost.bbc.com:7080/igbo --chrome-flags=\"--no-sandbox --headless --disable-gpu\" --output json --output html --output-path simorgh --config-path scripts/lighthouseConfig.js && node scripts/lighthouseBudget.js run",
    "test:lint": "eslint --ext .js,jsx,json ./src ./data ./cypress ./.storybook ./webpack** && swagger-cli validate data/schema.yaml",
    "test:lint:css": "stylelint 'src/**/*.js' 'src/**/*.jsx'",
    "test:puppeteer": "jest --env=jsdom --colors ./puppeteer",
    "test:size": "./scripts/bundleSize.sh",
    "test:unit": "jest --env=jsdom --coverage --colors --testPathIgnorePatterns=\"puppeteer\"",
    "snyk": "snyk test",
    "updateSnapshots": "npm run test:unit -- -u",
    "webpack:prod": "NODE_ENV=production webpack",
    "webpack:dev:client": "NODE_ENV=development webpack-dev-server --inline --hot --env.config='client'",
    "webpack:dev:server": "wait-on ./build/assets-local.json && NODE_ENV=development webpack --env.config='server'"
  },
  "husky": {
    "hooks": {
      "post-merge": "sh scripts/dependencyUpdateCheck.sh",
      "pre-commit": "npm run test:lint",
      "pre-push": "sh scripts/stopPushOnLatest.sh && sh scripts/upToDateWithLatest.sh && sh scripts/enforceVersions.sh && npm run test:unit -- --changedSince=latest && apache2-license-checker"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/simorgh.git"
  },
  "keywords": [
    "BBC",
    "Article"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/simorgh/issues"
  },
  "homepage": "https://github.com/bbc/simorgh#readme",
